<div class="my-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2025&q=80);">
  <div class="containerx">
    <h1>Mister Cocktail ! </h1>
    <p>Do & Share your own cocktails</p>
    <%= link_to "Add a new Cocktail",  new_cocktail_path, class:"btn-gradientx" %>
  </div>
</div>
<br>
<div class="container mt-3 ">

<div class="d-flex flex-wrap ">

  <% @cocktails.each do |cocktail| %>
    <div class="card m-3" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill,  class:"card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
        <%= link_to "See details", cocktail_path(cocktail), class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

</div>



